{
  "buildCommand": "cd frontend && npm run build",
  "installCommand": "cd frontend && npm install",
  "outputDirectory": "frontend/dist/client",
  "framework": null,
  "functions": {
    "api/render.js": {
      "maxDuration": 10,
      "memory": 1024,
      "includeFiles": "frontend/dist/server/**"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/assets/$1"
    },
    {
      "src": "/api/v1/(.*)",
      "dest": "https://backend-production-3e33.up.railway.app/api/v1/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/render"
    }
  ]
}