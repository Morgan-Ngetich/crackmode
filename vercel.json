{
  "buildCommand": "cd frontend && npm run build",
  "installCommand": "cd frontend && npm install",
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/frontend/dist/client/assets/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://backend-production-3e33.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/render"
    }
  ],
  "functions": {
    "api/render.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}